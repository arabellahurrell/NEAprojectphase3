@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>

                <button type="button" class="btn btn-link" data-toggle="tooltip" data-html="true" title="please enter a valid email in the form name@domain.com" data-placement="right">
                    help?
                </button>
                <input asp-for="Input.Email" class="form-control col-md-8" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <button type="button" class="btn btn-link" data-toggle="tooltip" data-html="true" title="Please enter a password that is atleast 8 characters long and includes 1 capital letter, 1 number and 1 special character" data-placement="right">
                    help?
                </button>
                <input asp-for="Input.Password" class="form-control col-md-8" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <button type="button" class="btn btn-link" data-toggle="tooltip" data-html="true" title="please enter the same password that you entered in the password box" data-placement="right">
                    help?
                </button>
                <input asp-for="Input.ConfirmPassword" class="form-control col-md-8" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
            <div class="form-group">
                <p>
                    Already have an account?
                    <a id="Login" asp-page="./Login"> Log in</a>
                </p>
                
            </div>
        </form>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
